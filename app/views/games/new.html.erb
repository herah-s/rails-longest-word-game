
<h1>New Game</h1>

<ul class="d-flex align-items-start" style="list-style: none; padding: 0;">
<% @letters.each do |letter| %>
  <li class="letter"><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post" data-turbo="false" class="mx-2 w-100">
  <label for="word">What is the longest word you can find?</label>
  <div class="d-flex"><input type="text" name="word" id="word">
  <input id="letters" name="letters" type="hidden" value=<%= @letters.join %> />
  <input type="submit" value="Play" class="btn btn-primary"></div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
